<table id="ads_list">
<thead>
  <tr>
    <th>Title</th>
    <th>Price</th>
    <th>Description</th>
  </tr>
</thead>
<tbody>
  <% @ads.each do |ad| %>
    <tr>
      <td><%= link_to(ad.title, ad) %></td>
      <td><%= ad.price %></td>
      <td><%= ad.description %></td>
    </tr>
  <% end %>
</tbody>
</table>