<h1>Search Ads</h1>
<%= form_tag ads_path, :method => :get do %>
  <p>Keywords<%= text_field_tag :keywords, params[:keywords] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= image_tag ad.pic_url(:thumb) %></td>
        <td><%= link_to ad.title, ad %> Listed -  <%= ad.created_at.to_date %>
        <td>Distance - <%= ad.distance.round(2) %> Miles</td>
        <td><%= link_to 'Show', ad %></td>
        <% if can? :update, ad %>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <% end %>
        <% if can? :destroy, ad %>
        <td><%= link_to 'Delete', ad %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ad', new_ad_path %>
