<%= simple_form_for(@ad) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="field">
     <%= f.association :category %>
     </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= image_tag(@ad.pic_url) if @ad.pic? %>
      <%= f.file_field :pic %>
      <%= f.hidden_field :pic_cache %>
      <label><%= f.check_box :remove_pic %>Remove Pic</label>
    </div>
    <div class="form-group">
      <%= image_tag(@ad.pic2_url) if @ad.pic2? %>
      <%= f.file_field :pic2 %>
      <%= f.hidden_field :pic2_cache %>
      <label><%= f.check_box :remove_pic2 %>Remove Pic2</label>
    </div>
    <div class="form-group">
      <%= image_tag(@ad.pic3_url) if @ad.pic3? %>
      <%= f.file_field :pic3 %>
      <%= f.hidden_field :pic3_cache %>
      <label><%= f.check_box :remove_pic3 %>Remove Pic3</label>
    </div>
  </div>
   <%= f.hidden_field :zip, :value => current_user.zip %>
   <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
